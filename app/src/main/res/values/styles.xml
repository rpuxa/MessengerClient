<resources>


    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginStyle" parent="MyTheme">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

    </style>

    <style name="ProfileTheme" parent="MyTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="MyTheme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="BaseButtonStyle" parent="MyTheme">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
<!--        <item name="android:paddingTop">15dp</item>-->
<!--        <item name="android:paddingBottom">15dp</item>-->
    </style>

    <style name="ColoredButton" parent="BaseButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/colored_round_button</item>
    </style>

    <style name="BorderlessButton" parent="BaseButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/borderless_round_button</item>
    </style>

</resources>
